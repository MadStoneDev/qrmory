# ===========================================
# QRmory Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# ===========================================

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3020
NEXT_PUBLIC_NODE_ENV=development

# ===========================================
# Supabase
# ===========================================
# Get these from: Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
# Service role key for admin operations (webhooks, etc.)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===========================================
# Redis (Upstash)
# ===========================================
# Get these from: Upstash Console > Your Database > REST API
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# ===========================================
# Email (Resend)
# ===========================================
# Get this from: resend.com > API Keys
RESEND_API_KEY=re_your_resend_api_key_here

# ===========================================
# Google Places API
# ===========================================
# Get this from: Google Cloud Console > APIs & Services > Credentials
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# ===========================================
# Paddle (Payments)
# ===========================================
# Get these from: Paddle Dashboard > Developer Tools
PADDLE_API_KEY=your_paddle_api_key_here
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=your_paddle_client_token_here
PADDLE_NOTIFICATION_WEBHOOK_SECRET=your_webhook_secret_here
# Set to 'sandbox' for testing, 'production' for live
NEXT_PUBLIC_PADDLE_ENV=sandbox

# ===========================================
# LogRocket (Error Tracking - Optional)
# ===========================================
# Get this from: LogRocket Dashboard > Settings > General
NEXT_PUBLIC_LOGROCKET_APP_ID=your_logrocket_app_id_here

# ===========================================
# R2 Cloudflare
# ===========================================
# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_access_key_id_from_step_3
R2_SECRET_ACCESS_KEY=your_secret_access_key_from_step_3
R2_BUCKET_NAME=qrmory-media
R2_PUBLIC_URL=

# ===========================================
# Custom Domains
# ===========================================
# The hostname users should point their CNAME records to
# This should be your server's hostname (e.g., qrmory.com or links.qrmory.com)
NEXT_PUBLIC_CUSTOM_DOMAIN_TARGET=qrmory.com

# ===========================================
# Coolify API (for custom domain routing)
# ===========================================
# Get these from Coolify:
# - API URL: Your Coolify instance URL + /api/v1
# - API Token: Settings → API Tokens → Create (Read & Write permission)
# - App UUID: Found in your app's URL: /project/xxx/application/[THIS-UUID]
COOLIFY_API_URL=https://your-coolify-instance.com/api/v1
COOLIFY_API_TOKEN=your_api_token_here
COOLIFY_APP_UUID=your_qrmory_app_uuid_here